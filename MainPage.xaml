<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OtpApp.MainPage">

    <StackLayout Padding="20">

        <!-- Label using the TitleFont defined in App.xaml -->
        <Label Text="Welcome to OTP App!"
               Font="{StaticResource TitleFont}"
               HorizontalOptions="Center" />

        <!-- Button using the ButtonStyle defined in App.xaml -->
        <Button Text="Send OTP"
                Style="{StaticResource ButtonStyle}"
                Clicked="OnSendOtpClicked" />

    </StackLayout>

</ContentPage>
